@model IEnumerable<Nhom2_WebsiteBanXe.Models.Xe>
@{
    ViewBag.Title = "SpTheoLoai";
    Layout = "~/Views/Shared/_LayoutTrangChuNew.cshtml";
}

<link href="~/Content/LTW.css" rel="stylesheet" />

<h3 style="text-align:center">XE THEO LOẠI</h3>
<div class="row">
    @foreach (var xe in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details","CarStore",new { id = xe.idXe})">
                    <img alt="@xe.TenXe" src="~/HinhSP/@xe.Anhbia" style="width:200px" />
                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @xe.TenXe
                        </h4>
                        <p></p>
                    </div>
                </a>
                <div class="ratings">
                    <div class="pull-right">
                        <p>
                            <span class="glyphicon glyphicon-heart" style="color: red"></span> @xe.TinhTrangXe
                        </p>
                        <p>
                            <span class="glyphicon glyphicon-folder-close" style="color: orange"></span> @xe.SoLuongTon
                        </p>
                    </div>
                    <div>
                        <p>
                            <span class="glyphicon glyphicon-tag" style="text-indent: 5px; color: red"></span> @String.Format("{0:0,0}", @xe.GiaTien) @*@xe.GiaTien*@ VNĐ
                        </p>
                        <p>
                            <span class="glyphicon glyphicon-calendar" style="text-indent: 5px; color: orange"></span> @xe.NamSanXuat
                        </p>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

