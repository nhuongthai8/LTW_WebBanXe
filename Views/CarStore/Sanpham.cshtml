@*@model IEnumerable<Nhom2_WebsiteBanXe.Models.Xe>*@

@model PagedList.PagedList<Xe>
@using PagedList.Mvc;
@using Nhom2_WebsiteBanXe.Models
@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>SẢN PHẨM CỦA WEBSITE</h2>
@foreach (var xe in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Details","CarStore",new { id = xe.idXe})">
                <img alt="@xe.TenXe" src="~/HinhSP/@xe.Anhbia" style="width:200px" />
                <div>
                    <br />
                    <h4 style="text-align:center">
                        @xe.TenXe
                    </h4>
                    <p></p>
                </div>

            </a>
            <div class="ratings">
                <p class="pull-right">
                    <div id="Datmua">
                        <a href="@Url.Action("AddToCard","ShoppingCard", new { id = xe.idXe})" class="list-group-item">
                            ĐẶT HÀNG
                        </a>
                    </div>
                </p>
                <p style="color: orange">
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
                <p>
                    <span class="glyphicon glyphicon-tag" style="text-indent: 5px"></span> @xe.GiaTien VNĐ
                </p>
            </div>
        </div>
    </div>
}
<div style="text-align:center">
    <div>
        @*Tạo liên kết các trang*@
        Trang @(Model.PageNumber>Model.PageCount?10:Model.PageNumber) /@Model.PageCount
    </div>
    <div class="Menutrang">
        @Html.PagedListPager(Model, page => Url.Action("Sanpham", new { page = page }))
    </div>
</div>
