
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng nhập</title>

    <!-- Font Icon -->
    <link href="~/Content/assets2/fonts/material-icon/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <!-- Main css -->
    <link href="~/Content/assets2/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="main">

        <!-- Sing in  Form -->
        <section class="sign-in">

            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="~/Content/assets2/images/signin-image.jpg" alt="sing up image"></figure>
                        <a href="@Url.Action("Dangky","KhachHang")" class="signup-image-link">ĐĂNG KÝ THÀNH VIÊN</a>
                        <a href="@Url.Action("Index","CarStore")" class="signup-image-link">TRỞ VỀ TRANG CHỦ</a>
                    </div>
                    <div class="signin-form">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <h2 class="form-title">ĐĂNG NHẬP</h2>
                            <h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
                            <form method="POST" class="register-form" id="login-form">
                                <div class="form-group">
                                    <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    <input type="text" name="TendangnhapKH" id="your_name" placeholder="Username" />
                                </div>
                                @ViewData["Loi1"]
                                <div class="form-group">
                                    <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                    <input type="password" name="MatkhauKH" id="your_pass" placeholder="Password" />
                                </div>
                                @ViewData["Loi2"]
                                <div class="form-group form-button">
                                    <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                                </div>
                            </form>
                        }
                        <div class="social-login">
                            <span class="social-label">Đăng nhập bằng</span>
                            <ul class="socials">
                                <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                                <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                                <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </section>

    </div>

    <!-- JS -->
    <script src="~/Content/assets2/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/assets2/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>