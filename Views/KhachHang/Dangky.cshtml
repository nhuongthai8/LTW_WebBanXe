
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
<br />
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên: </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Giới tính: </td>
            <td>
                @Html.TextBox("GioitinhKH")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh: </td>
            <td>
                <input type="date" name="NgaySinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td>SĐT: </td>
            <td>
                @Html.TextBox("SdtKH")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ: </td>
            <td>
                @Html.TextBox("DiachiKH")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>eMail: </td>
            <td>
                @Html.TextBox("eMailKH")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TendangnhapKH")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu: </td>
            <td>
                @Html.Password("MatkhauKH")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu: </td>
            <td>
                @Html.Password("Matkhaunl")
                @ViewData["Loi8"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>

