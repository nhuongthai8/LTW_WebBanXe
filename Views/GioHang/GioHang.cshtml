@using Nhom2_WebsiteBanXe.Models
@model List<ShoppingCart>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã xe</td>
        <td>Tên xe</td>
        <td>Ảnh bìa</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>@item.iMaxe</td>
            <td>@item.sTenxe</td>
            <td><img src="~/HinhSP/@item.sAnhbia" /></td>
            @using (Html.BeginForm("UpdateGioHang", "GioHang", new { @iMaSP = item.iMaxe }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow; text-align:center" />
                </td>
                <td>@String.Format("{0:0,0}", item.dGiatien)</td>
                <td>@String.Format("{0:0,0}", item.dThanhtien)</td>
                <td><a href="@Url.Action("Details","CarStore",new { id = item.iMaxe})"> Chi tiết</a></td>
                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.iMaxe })</td>
                <td><input type="submit" value="Cập Nhật" /></td>
            }

        </tr>
    }
    <tr style="font-weight:bold; text-align:center; color:red">
        <td colspan="4">Số lượng xe: @ViewBag.Tongsoluong</td>
        <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
    </tr>
    <tr style="font-weight: bold; color:blue;text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa tất cả", "XoaAll")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
        </td>
    </tr>
</table>

